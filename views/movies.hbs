<div id="movies">
    <h2>{{title}}</h2>
    <h3>Click on the movie to check the showtime</h3>
    <div id="movies-list">
    {{#each movieArray }}
        <div id="movies-list-card" class="card" style="width: 18rem;">
            <img src={{ this.image }} class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{ this.title }}</h5>
                <a href="/movie/{{this._id}}" class="btn btn-primary">Details</a>
            </div>
        </div>
    {{/each}}
    </div>
</div>